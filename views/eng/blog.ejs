<%- include ("../partials/header.ejs") %>
<%- include ("../partials/engnavbar.ejs") %>
<body class = "body">  
    <div class="container cb mt-2 mb-2">
  
      <h1 class="mt-4 mb-3">News
        <small></small>
      </h1>
  
      <ol class="breadcrumb bg-mb">
        <li class="breadcrumb-item">
          <a href="/en" class="text-decoration-none">Home</a>
        </li>
        <li class="breadcrumb-item">News</li>
        <li class="breadcrumb-item active"><%= category %></li>
      </ol>
  
      <!-- Blog Post -->
      <div class="row">

        <% result.articles.forEach(article => { %>
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-lg-4">
                  <a href="/en/<%= article.slug%>">
                    <img class="img-fluid rounded" src="<%= article.link_img %>" alt="Responsive image">
                  </a>
                </div>
                <div class="col-lg-8">
                  <h2 class="card-title"><%= article.title %></h2>
                  <p class="card-text"><%- article.body.substring(0, 300) + "..." %></p>
                  <br>
                  <br>
                  <a href="/en/<%= article.slug%>" class="btn btn-vernesis btn-block text-decoration-none">Ler &rarr;</a>
                </div>
              </div>
            </div>
          </div>
        <%})%>
              
    </div>

      <!-- Pagination -->
      <ul class="pagination justify-content-center mb-4">
        <% if (result.page != 1){ %>
          <li class="page-item">
            <a class="page-link" href="/pt/<%= result.articles[0].category_id.slug_pt %>/<%=result.page-1%>">&larr; Recentes</a>
          </li>
        <%}%>

        <% if (result.next){ %>
          <li class="page-item">
            <a class="page-link" href="/pt/<%= result.articles[0].category_id.slug_pt %>/<%=result.page+1%>">Antigos &rarr;</a>
          </li>
        <%}%>
      </ul>
  
    </div>
    <!-- /.container -->
</body>

<%- include ("../partials/footer.ejs") %>