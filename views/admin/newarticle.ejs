<%- include ("../partials/header.ejs") %>
<%- include ("../partials/ptnavbar.ejs") %>
<body>
  
  <section class="banner simple">
    <ol class="breadcrumb bg-mb">
      <li class="breadcrumb-item">
        <a href="/pt" class="text-decoration-none">In√≠cio</a>
      </li>
      <li class="breadcrumb-item">
          <a href="/admin" class="text-decoration-none">Admin</a>
        </li>
      <li class="breadcrumb-item active">Novo Artigo</li>
    </ol>
  </section>

  <section class="container">
    <form method="POST" action="/admin/article/new" class="w-100">
      <div class="column">
        <label>
          Titulo PT:
          <input type="text" class="form-control mb-2" name="title_pt">
        </label>
        
        <label>
          Titulo EN:
          <input type="text" class="form-control mb-2" name="title_en">
        </label>
  
        <label>
          Image:
          <input type="text" class="form-control mb-2" name="link_img">
        </label>
  
        <label>
          Categoria:
          <select class="form-control mb-2" name=category_id>
            <% categories.forEach(category => {%>
                <option value="<%= category._id %>"> <%= category.title_pt %></option>
            <%})%>
        </select>
        </label>
  
        <label>
          Texto PT:
          <textarea type="text" class="form-control mb-2" name="body_pt" id="tiny_pt"></textarea><br>
        </label>
  
  
        <label>
          Texto EN:
          <textarea type="text" class="form-control mb-2" name="body_en" id="tiny_en"></textarea><br>
        </label>
        
        <div class="d-grid">
          <button type="submit" class="btn btn-outline-dark">Enviar</button>
        </div>
      </div>
    </form>
  </section>  
</body>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#tiny_pt",
        plugins: ["advlist autolink link image lists preview hr searchplace wordcount fullscreen insertdatetime media save table paste emoticons"],
        resize: false
    })

    tinymce.init({
        language: "pt_BR",
        selector: "#tiny_en",
        plugins: ["advlist autolink link image lists preview hr searchplace wordcount fullscreen insertdatetime media save table paste emoticons"],
        resize: false
    })
</script>
